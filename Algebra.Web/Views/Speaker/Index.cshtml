@using Algebra.Entities.Models
@model IEnumerable<Speaker>

<div class="container small">
    <div class="row">
        <div class="col-md-12">
            <div><h3>Speaker <small>Here you can add edit remove sponsor.</small></h3></div>
            <div><button type="button" class="btn btn-primary glyphicon-plus" onclick="location.href='@Url.Action("Add", "speaker")'">Add</button></div>
            <hr class="colorgraph">
            <div class="table-responsive">
                @if (Model.Any())
                {
                    <table id="mytable" class="table table-bordred table-striped">
                        <thead>
                            <tr>
                                <th scope="col">Id</th>
                                <th scope="col">Name</th>
                                <th scope="col">Description</th>
                                <th scope="col">Image</th>
                                <th scope="col"></th>
                            </tr>
                        </thead>


                        <tbody>
                            @foreach (var speaker in Model)
                            {
                                <tr>
                                    <td>@speaker.Id</td>
                                    <td>@speaker.Name</td>
                                    <td>@speaker.Description</td>
                                    <td>@speaker.Image</td>
                                    <td>
                                        <p data-placement="top" data-toggle="tooltip" title="Edit">
                                            @Html.ActionLink("", "Add", new { id = speaker.Id }
                                                    , new { @class = "btn btn-primary btn-xs glyphicon glyphicon-pencil" })
                                        </p>
                                    </td>
                                    <td>
                                        <p data-placement="top" data-toggle="tooltip" title="Delete">
                                            <button id="btn-location-delete-@speaker.Id" value="@speaker.Id" class="btn btn-danger btn-xs" data-title="Delete" data-toggle="modal" data-target="#delete">
                                                <span class="glyphicon glyphicon-trash"></span>
                                            </button>
                                        </p>
                                    </td>

                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <h2>Speaker(s) are not available yet ...<small>(Add some records and try again later)</small></h2>
                }
            </div>
        </div>
    </div>
</div>




@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}