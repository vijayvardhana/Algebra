@using Algebra.Entities.ViewModels

@model List<AttendeeViewModels>
@{
    if (Model.Count == 0)
    {
        Model.Add(new AttendeeViewModels());
        Model.Add(new AttendeeViewModels());
    }
}
@for (int i = 0; i < Model.Count; i++)
{
    int index = i + 1;
    <div id="guest_@index.ToString()" class="small clonedInput">        
        <div class="row">
            <div class="col-lg-3">
                <div class="form-group">
                    <label asp-for="@Model[i].FirstName"></label> <span class="glyphicon-sm glyphicon-asterisk" style="color:red"></span>
                    <input asp-for="@Model[i].FirstName" class="form-control input-sm" />
                    <span asp-validation-for="@Model[i].FirstName" class="text-danger"></span>
                </div>
            </div>
            <div class="col-lg-2">
                <div class="form-group">
                    <label asp-for="@Model[i].MiddleName"></label>
                    <input asp-for="@Model[i].MiddleName" class="form-control input-sm" />
                </div>
            </div>
            <div class="col-lg-2">
                <div class="form-group">
                    <label asp-for="@Model[i].LastName"></label> <span class="glyphicon-sm glyphicon-asterisk" style="color:red"></span>
                    <input asp-for="@Model[i].LastName" class="form-control input-sm" />
                    <span asp-validation-for="@Model[i].LastName" class="text-danger"></span>
                </div>
            </div>
            <div class="col-lg-2">
                <div class="form-group">
                    <label asp-for="@Model[i].MobileNumber"></label> <span class="glyphicon-sm glyphicon-asterisk" style="color:red"></span>
                    <input asp-for="@Model[i].MobileNumber" class="form-control input-sm" />
                </div>
            </div>
            <div class="col-lg-2">
                <div class="form-group">
                    <label asp-for="@Model[i].Email"></label> <span class="glyphicon-sm glyphicon-asterisk" style="color:red"></span>
                    <input asp-for="@Model[i].Email" class="form-control input-sm" />
                </div>
            </div>
            <div class="col-lg-1">
                <span>[Delete]</span>
                <p data-placement="top" data-toggle="tooltip" title="Delete">
                    <button type="button" id="btn-location-delete-@i" onclick='' class="btn btn-danger btn-xs remove" data-title="Delete">
                        <span class="glyphicon glyphicon-trash"></span>
                    </button>
                </p>
            </div>
        </div>

    </div>
}
