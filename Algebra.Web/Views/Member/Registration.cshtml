@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
    <script src="~/js/registration.js" asp-append-version="true"></script>
    <script src="~/js/validator.js" asp-append-version="true"></script>
    <script type="text/javascript">
    var r = {
        Location: @Model.LocationId,
        Type: @Model.MembershipType,
        Reffered: @Model.ReferredBy,
        CreatedBy: '@Model.CreatedBy'
        };



        $(document).ready(function () {
            var o = new Registration(r);

            $("#btn-submit").click(function () {
                o.SubmitForm();
            });

            $("#PaymentMode").change(function () {
                if (this.value == '6' || this.value == '7')
                {
                    $("#cheque-section").show();
                }
                else {
                    $("#cheque-section").hide();
                }
            });
        });

        /*
         * This below code segment will
         * add/remove the cheque detail rows
         * */

        var regex = /^(.+?)(\d+)$/i;
        var cloneIndex = $(".clonedInput").length;

        function clone() {
            $(this).parents(".clonedInput").clone()
                .appendTo("#cheque-section")
                .attr("id", "cheque-" + cloneIndex)
                .find(".form-group")
                .each(function () {
                    var ctrl = $(this).find('input:first')[0] || "";
                    if (ctrl) {
                        var id = ctrl.id;
                       // console.log('Id : ' + id);
                        var match = id.match(regex) || [];
                        if (match.length == 3) {
                            this.id = match[1] + (cloneIndex + 1);
                            //console.log("New Id : " + match[1] + (cloneIndex + 1));
                            var inputCtrl = $(this).find('input')[0];
                            $(inputCtrl).removeAttr('id');
                            $(inputCtrl).attr('id', match[1] + (cloneIndex + 1));
                           // console.log("Ctrl Id: " +inputCtrl.id);
                        }
                    }
                })
                .on('click', 'button.clone', clone)
                .on('click', 'button.remove', remove);
            cloneIndex++;

        }
        function remove() {
            $(this).parents(".clonedInput").remove();
        }

        $("button.clone").on("click", clone);
        $("button.remove").on("click", remove);




    $.validator.unobtrusive.adapters.add("agerangevalidator", ["minage", "maxage"], function (options) {
        options.rules["agerangevalidator"] = options.params;
        options.messages["agerangevalidator"] = options.message;
    });

    $.validator.addMethod("agerangevalidator", function (value, elements, params) {
        if (value) {
            var valDate = new Date(value);
            if ((new Date().getFullYear() - valDate.getFullYear()) < parseInt(params.minage) ||
                (new Date().getFullYear() - valDate.getFullYear()) > parseInt(params.maxage)
            ) {
                return false;
                //validation failed
            }
        }
        return true;
    });



    </script>
}
