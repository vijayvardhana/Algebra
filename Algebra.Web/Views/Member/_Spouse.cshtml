@using Algebra.Entities.ViewModels
@using Algebra.Data
@model SpouseViewModels

<div id="spouse" class="small">
    <h4>Spouse <small>Details</small></h4>
    <hr class="colorgraph">
    <div class="row">
        <div class="col-lg-4">
            <div class="form-group">
                <label asp-for="@Model.Title"></label> <span class="glyphicon-sm glyphicon-asterisk" style="color:red"></span>
                <select asp-for="@Model.Title" asp-items="Html.GetEnumSelectList(typeof(Enums.Title))" class="form-control input-sm" model="member">
                    <option selected="selected" value="">Please select</option>
                </select>
                <span asp-validation-for="@Model.Title" class="text-danger"></span>
            </div>
        </div>
        <div class="col-lg-4">
            <div class="form-group">
                <label asp-for="@Model.FirstName"></label> <span class="glyphicon-sm glyphicon-asterisk" style="color:red"></span>
                <input asp-for="@Model.FirstName" class="form-control input-sm" />
                <span asp-validation-for="@Model.FirstName" class="text-danger"></span>
            </div>
        </div>
        <div class="col-lg-4">
            <div class="form-group">
                <label asp-for="@Model.MiddleName"></label>
                <input asp-for="@Model.MiddleName" class="form-control input-sm" />
                <span asp-validation-for="@Model.MiddleName" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-4">
            <div class="form-group">
                <label asp-for="@Model.LastName"></label> <span class="glyphicon-sm glyphicon-asterisk" style="color:red"></span>
                <input asp-for="@Model.LastName" class="form-control input-sm" />
                <span asp-validation-for="@Model.LastName" class="text-danger"></span>
            </div>
        </div>
        <div class="col-lg-4">
            <div class="form-group">
                <label asp-for="@Model.PrimaryMobileNumber"></label> <span class="glyphicon-sm glyphicon-asterisk" style="color:red"></span>
                <input asp-for="@Model.PrimaryMobileNumber" class="form-control input-sm" />
                <span asp-validation-for="@Model.PrimaryMobileNumber" class="text-danger"></span>
            </div>
        </div>
        <div class="col-lg-4">
            <div class="form-group">
                <label asp-for="@Model.SecondaryMobileNumber"></label>
                <input asp-for="@Model.SecondaryMobileNumber" class="form-control input-sm" />
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-4">
            <div class="form-group">
                <label asp-for="@Model.SpouseDOB"></label> <span class="glyphicon-sm glyphicon-asterisk" style="color:red"></span>
                <input type="date" asp-for="@Model.SpouseDOB" asp-format="{0:yyyy-MM-dd}" class="form-control input-sm" />
                <span asp-validation-for="@Model.SpouseDOB" class="text-danger"></span>
            </div>
        </div>
        <div class="col-lg-4">
            <div class="form-group">
                <label asp-for="@Model.Email"></label>
                <input asp-for="@Model.Email" class="form-control input-sm" />
            </div>
        </div>
        <div class="col-lg-4">
            <div class="form-group">
                <label asp-for="@Model.TelephoneNumber"></label>
                <input asp-for="@Model.TelephoneNumber" class="form-control input-sm" />
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-4">
            <div class="form-group">
                <label asp-for="@Model.Gender"></label>
                <select asp-for="@Model.Gender" asp-items="Html.GetEnumSelectList(typeof(Enums.Gender))" class="form-control input-sm">
                    <option selected="selected" value="">--- Gender ---</option>
                </select>
            </div>
        </div>
        <div class="col-lg-4">
            <div class="form-group">
                <label asp-for="@Model.MaritalStatus"></label>
                <select asp-for="@Model.MaritalStatus" asp-items="Html.GetEnumSelectList(typeof(Enums.MaritalStatus))" class="form-control input-sm">
                    <option selected="selected" value="">--- Marital status ---</option>
                </select>
            </div>
        </div>
        <div class="col-lg-4">
            <div class="form-group">
                <label asp-for="@Model.Occupation"></label>
                <select asp-for="@Model.Occupation" asp-items="Html.GetEnumSelectList(typeof(Enums.Occupation))" class="form-control input-sm">
                    <option selected="selected" value="">--- Occupation ---</option>
                </select>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-4">
            <div class="form-group">
                <label asp-for="@Model.ProfessionalTitle"></label>
                <input asp-for="@Model.ProfessionalTitle" class="form-control input-sm" />
            </div>
        </div>
        <div class="col-lg-4">
            <div class="form-group">
                <label asp-for="@Model.Designation"></label>
                <input asp-for="@Model.Designation" class="form-control input-sm" />
            </div>
        </div>
        <div class="col-lg-4">
            <div class="form-group">
                <label asp-for="@Model.Organization"></label>
                <input asp-for="@Model.Organization" class="form-control input-sm" />
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-4">
            <div class="form-group">
                <label asp-for="@Model.PresentAddress"></label>
                <input asp-for="@Model.PresentAddress" class="form-control input-sm" />
            </div>
        </div>
        <div class="col-lg-2">
            <div class="form-group">
                <label asp-for="@Model.PresentCity"></label>
                <input asp-for="@Model.PresentCity" class="form-control input-sm" />
            </div>
        </div>
        <div class="col-lg-2">
            <div class="form-group">
                <label asp-for="@Model.PresentState"></label>
                <input asp-for="@Model.PresentState" class="form-control input-sm" />
            </div>
        </div>
        <div class="col-lg-2">
            <div class="form-group">
                <label asp-for="@Model.PresentPin"></label>
                <input asp-for="@Model.PresentPin" class="form-control input-sm" />
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-4">
            <div class="form-group">
                <label asp-for="@Model.PermanentAddress"></label>
                <input asp-for="@Model.PermanentAddress" class="form-control input-sm" />
            </div>
        </div>
        <div class="col-lg-2">
            <div class="form-group">
                <label asp-for="@Model.PermanentCity"></label>
                <input asp-for="@Model.PermanentCity" class="form-control input-sm" />
            </div>
        </div>
        <div class="col-lg-2">
            <div class="form-group">
                <label asp-for="@Model.PermanentState"></label>
                <input asp-for="@Model.PermanentState" class="form-control input-sm" />
            </div>
        </div>
        <div class="col-lg-2">
            <div class="form-group">
                <label asp-for="@Model.PermanentPin"></label>
                <input asp-for="@Model.PermanentPin" class="form-control input-sm" />
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-6">
            <div class="form-group">
                <input type="hidden" asp-for="@Model.CardId" value="@Model.CardId-02" class="form-control input-sm" />
            </div>
        </div>
    </div>
</div>
