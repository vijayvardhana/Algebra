@using Algebra.Entities.Models
@model IEnumerable<Fee>
@{ 
    var loc = ViewBag.Locations;
}
<div class="container small">
    <div class="row">
        <div class="col-md-12">
            <div><h3>Membership Fee(s) <small>Here you can add, edit & remove.</small></h3></div>
            <div><button type="button" class="btn btn-primary glyphicon-plus" onclick="location.href='@Url.Action("Add", "Fee")'">Add</button></div>
            <hr class="colorgraph">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table id="mytable" class="table table-bordred table-striped">
                        <thead>
                            <tr>
                                <th scope="col">Id</th>
                                <th scope="col">Individual</th>
                                <th scope="col">Couple</th>
                                <th scope="col">Dependent</th>
                                <th scope="col">GST Rate (%)</th>
                                <th scope="col">GST Amount</th>
                                <th scope="col">TotalAmount</th>
                                <th scope="col">Location</th>
                                <th scope="col"></th>
                                <th scope="col"></th>
                            </tr>
                        </thead>


                        <tbody>
                            @foreach (var fee in Model)
                            {
                            <tr>
                                <td>@fee.Id</td>
                                <td>@fee.Individual</td>
                                <td>@fee.Couple</td>
                                <td>@fee.Dependent</td>
                                <td>@fee.GSTRate</td>
                                <td>@fee.GSTAmount</td>
                                <td>@fee.TotalAmount</td>
                                <td>@loc[fee.LocationId]</td>
                                <td>
                                    <p data-placement="top" data-toggle="tooltip" title="Edit">
                                        @Html.ActionLink("", "Add", new { id = fee.Id }
                                                , new { @class = "btn btn-primary btn-xs glyphicon glyphicon-pencil" })
                                    </p>
                                </td>
                                <td>
                                    <p data-placement="top" data-toggle="tooltip" title="Delete">
                                        <button id="btn-location-delete-@fee.Id" value="@fee.Id" onclick='Location.GetLocationId' class="btn btn-danger btn-xs" data-title="Delete" data-toggle="modal" data-target="#delete">
                                            <span class="glyphicon glyphicon-trash"></span>
                                        </button>
                                    </p>
                                </td>

                            </tr>
                            }
                        </tbody>
                    </table>
                </div>

            }
            else
            {
                <h2>Fee Record(s) are not available yet ...<small>(Add some records and try again later)</small></h2>
            }
        </div>
    </div>
</div>
