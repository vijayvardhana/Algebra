@using Algebra.Entities.ViewModels
@model EventViewModels

<div class="container">
    <form method="post" id="event-add-form">
        @Html.AntiForgeryToken()
        <div id="event" class="small">
            <h4>Event <small>(@ViewBag.Title)</small></h4>
            <hr class="colorgraph">
            <div class="row">
                <div class="col-lg-4">
                    <div class="form-group">
                        <label asp-for="@Model.Categories"></label> <span class="glyphicon-sm glyphicon-asterisk" style="color:red"></span><br />
                        <select asp-for="@Model.Categories" asp-items="@Model.CategoryList" name="Categories[]" class="form-control input-sm multiselect" multiple="multiple"></select><br />
                        <span asp-validation-for="@Model.Categories" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="form-group">
                        <label asp-for="@Model.Speakers"></label> <span class="glyphicon-sm glyphicon-asterisk" style="color:red"></span><br />
                        <select asp-for="@Model.Speakers" asp-items="@Model.SpeakerList" name="Speakers[]" multiple class="form-control input-sm multiselect"></select><br />
                        <span asp-validation-for="@Model.Speakers" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="form-group">
                        <label asp-for="@Model.Sponsors"></label> <span class="glyphicon-sm glyphicon-asterisk" style="color:red"></span><br />
                        <select asp-for="@Model.Sponsors" asp-items="@Model.SponsorList" name="Sponsors[]" multiple class="form-control input-sm multiselect"></select><br />
                        <span asp-validation-for="@Model.Sponsors" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-4">
                    <div class="form-group">
                        <label asp-for="@Model.Title"></label> <span class="glyphicon-sm glyphicon-asterisk" style="color:red"></span>
                        <input asp-for="@Model.Title" class="form-control input-sm" />
                        <span asp-validation-for="@Model.Title" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="form-group">
                        <label asp-for="@Model.Description"></label>
                        <input asp-for="@Model.Description" class="form-control input-sm" />
                        <span asp-validation-for="@Model.Description" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="form-group">
                        <label asp-for="@Model.StartDate"></label> <span class="glyphicon-sm glyphicon-asterisk" style="color:red"></span>
                        <input asp-for="@Model.StartDate" asp-format="{0:yyyy-MM-dd}" class="form-control input-sm" />
                        <span asp-validation-for="@Model.StartDate" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-4">
                    <div class="form-group">
                        <label asp-for="@Model.Address"></label> <span class="glyphicon-sm glyphicon-asterisk" style="color:red"></span>
                        <input asp-for="@Model.Address" class="form-control input-sm" />
                        <span asp-validation-for="@Model.Address" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="form-group">
                        <label asp-for="@Model.City"></label> <span class="glyphicon-sm glyphicon-asterisk" style="color:red"></span>
                        <input asp-for="@Model.City" class="form-control input-sm" />
                        <span asp-validation-for="@Model.City" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="form-group">
                        <label asp-for="@Model.State"></label> <span class="glyphicon-sm glyphicon-asterisk" style="color:red"></span>
                        <input asp-for="@Model.State" class="form-control input-sm" />
                        <span asp-validation-for="@Model.State" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-4">
                    <div class="form-group">
                        <label asp-for="@Model.Format"></label> <span class="glyphicon-sm glyphicon-asterisk" style="color:red"></span>
                        <input asp-for="@Model.Format" class="form-control input-sm" />
                        <span asp-validation-for="@Model.Format" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="form-group">
                        <label asp-for="@Model.Region"></label>
                        <input asp-for="@Model.Region" class="form-control input-sm" />
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-4">
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary" id="btn-submit">Submit</button>
                        <button type="button" class="btn" id="btn-cancel" onclick="location.href='@Url.Action("index", "event")'">Back</button>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>
@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
    <script src="~/js/multiselect.js" asp-append-version="true"></script>

    <script type="text/javascript">

        $(document).ready(function () {
           $('.multiselect').multiselect();
        });

    </script>
}