@using Algebra.Entities.Models
@model IEnumerable<Category>

<div class="container small">
    <div class="row">
        <div class="col-md-12">
            <div><h3>Categories <small>Here you can add, edit & remove.</small></h3></div>
            <div><button type="button" class="btn btn-primary glyphicon-plus" onclick="location.href='@Url.Action("Add", "Fee")'">Add</button></div>
            <hr class="colorgraph">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table id="mytable" class="table table-bordred table-striped">
                        <thead>
                            <tr>
                                <th scope="col">Id</th>
                                <th scope="col">Name</th>
                                <th scope="col">Description</th>
                                <th scope="col">Created By</th>
                                <th scope="col">Is Active</th>
                                <th scope="col"></th>
                                <th scope="col"></th>
                            </tr>
                        </thead>


                        <tbody>
                            @foreach (var category in Model)
                            {
                                <tr>
                                    <td>@category.Id</td>
                                    <td>@category.Type</td>
                                    <td>@category.Description</td>
                                    <td>@category.Created</td>
                                    <td>@((category.IsDeleted) ? "false" : "true")</td>
                                    <td>
                                        <p data-placement="top" data-toggle="tooltip" title="Edit">
                                            @Html.ActionLink("", "Add", new { id = category.Id }
                                                    , new { @class = "btn btn-primary btn-xs glyphicon glyphicon-pencil" })
                                        </p>
                                    </td>
                                    <td>
                                        <p data-placement="top" data-toggle="tooltip" title="Delete">
                                            <button id="btn-location-delete-@category.Id" value="@category.Id" onclick='Location.GetLocationId' class="btn btn-danger btn-xs" data-title="Delete" data-toggle="modal" data-target="#delete">
                                                <span class="glyphicon glyphicon-trash"></span>
                                            </button>
                                        </p>
                                    </td>

                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

            }
            else
            {
                <h2>No Categories are available yet ...<small>(Add some categories and try again later)</small></h2>
            }
        </div>
    </div>
</div>